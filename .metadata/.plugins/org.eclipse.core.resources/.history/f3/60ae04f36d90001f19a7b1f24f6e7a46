void display7SEG_2(int num) {
    switch(num) {
        case 0: Khong_2(); break;
        case 1: Mot_2(); break;
        case 2: Hai_2(); break;
        case 3: Ba_2(); break;
        case 4: Bon_2(); break;
        case 5: Nam_2(); break;
        case 6: Sau_2(); break;
        case 7: Bay_2(); break;
        case 8: Tam_2(); break;
        case 9: Chin_2(); break;
    }
}
